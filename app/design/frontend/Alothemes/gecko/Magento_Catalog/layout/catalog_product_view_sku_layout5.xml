<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    	<attribute name="class" value="layout5"/>
    	<referenceContainer name="main.content" htmlTag="main" htmlClass="page-main page-main-pal container" />
		<move element="product.info.media" destination="page.wrapper" before="main.content"/>
		<referenceContainer name="product.info.main" htmlClass="product-info-main product-shop col-md-12 col-sm-12" />
		<referenceContainer name="product.info.media" htmlClass="product media product-img-box clearfix col-md-12 col-sm-12" />
		<referenceBlock name="product.info.media.image" template="product/view/layout5_gallery.phtml" />
    </body>
</page>
